mod game;

import screen;

struct
| screen : Screen
 -> Game;

// pour l'instant...
imut WindowWidth = 600U;
imut WindowHeight = 300U;
imut WindowPosX = 100U;
imut WindowPosY = 100U;
imut Title = "Teelol";

def createGame () -> Game
{
    let screen = createScreen (Title, WindowWidth, WindowHeight, WindowPosX, WindowPosY);
    return Game { screen };
}

def start (ref game : Game)
{
    while (true)
        game.screen.display();
}
