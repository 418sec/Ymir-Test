mod std.memory;

def alloc (T) (const a : T) {
    extern (C) GC_malloc (size : ulong) -> p!void;
    let x = cast!(p!T) (GC_malloc (T::sizeof));
    *x = a;
    return x;
}

def memset (array : p!byte, const size : ulong, const b : byte) {
    for i in 0U .. size {
        *array = b;
        array = array + 1;
    }
}
