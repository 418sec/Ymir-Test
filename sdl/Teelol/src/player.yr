mod src.player;

import src.lib.sdl;
import src.resource;
import src.drawable;

struct
| name : string
| drawable : Drawable // Waiting for the inheritance feature...
 -> Player;

def createPlayer (name : string) -> Player
{
    let res = generateResource (ResourceType::Player);
    let d = Drawable { SDL_Rect { 10, 10, 10, 10 }, res };
    return Player { name, d };
}

def getResource (ref player : Player) -> mut p!Resource
{
    return &(player.drawable.res);
}
